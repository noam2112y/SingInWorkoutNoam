<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SingInWorkoutNoam.Views.UserDetailsPage"
    Title="UserDetailsPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#C6426E" />
            <GradientStop Offset="1.0" Color="#642B73" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="1.5*,4*,*"
          ColumnDefinitions="*,8*,*">

        <HorizontalStackLayout
            Grid.Column="1"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                Text="Account Details"
                FontSize="24"
                TextColor="Wheat" />
        </HorizontalStackLayout>

        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="1">

            <Border Margin="0,0,0,10"
                    Padding="10"
                    Stroke="#ccc"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1">
                <Entry x:Name="FirstNameEntry"
                       Placeholder="First Name"
                       FontSize="18"
                       TextColor="Wheat" />
            </Border>

            <Border Margin="0,0,0,10"
                    Padding="10"
                    Stroke="#ccc"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1">
                <Entry x:Name="LastNameEntry"
                       Placeholder="Last Name"
                       FontSize="18"
                       TextColor="Wheat" />
            </Border>

            <Border Margin="0,0,0,10"
                    Padding="10"
                    Stroke="#ccc"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1">
                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       Keyboard="Email"
                       FontSize="18"
                       TextColor="Wheat" />
            </Border>

            <Border Margin="0,0,0,10"
                    Padding="10"
                    Stroke="#ccc"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1">
                <Entry x:Name="MobileEntry"
                       Placeholder="Mobile"
                       Keyboard="Telephone"
                       FontSize="18"
                       TextColor="Wheat" />
            </Border>

            <Button x:Name="UpdateButton"
                    Text="Update"
                    FontSize="20"
                    HeightRequest="70"
                    CornerRadius="8"
                    TextColor="White"
                    Clicked="UpdateButton_Clicked" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>
